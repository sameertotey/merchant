= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :price, "Price (like 2.99)"
    = f.text_field :price
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :stock
    = f.text_field :stock
  .field
    = f.label :image_url
    = f.text_field :image_url
  .actions
    = f.submit 'Save'
